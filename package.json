{
  "name": "kiosk-diagnostics",
  "version": "1.0.0",
  "description": "Testing website for the kiosked apps.",
  "main": "index.html",
  "scripts": {
    "build": "npx @11ty/eleventy && npm run css",
    "serve": "npx @11ty/eleventy --serve & npm run css:watch",
    "css": "tailwind -i ./css/input.css -o ./_site/css/styles.css",
    "css:watch": "tailwind -i ./css/input.css -o ./_site/css/styles.css --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf _site"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LearningLogistics/kiosk-diagnostics.git"
  },
  "author": "Learning Logistics",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LearningLogistics/kiosk-diagnostics/issues"
  },
  "homepage": "https://github.com/LearningLogistics/kiosk-diagnostics#readme",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "tailwindcss": "^3.3.1"
  }
}
